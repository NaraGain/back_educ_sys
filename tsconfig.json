    "esModuleInterop": true,                                                
    "forceConsistentCasingInFileNames": true,            
    "strict": true,   
    "sourceMap": false ,
    "skipLibCheck": true,
    "outDir": "./dist",                                 
  },
  "include": ["src/**/*"],
}
